<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">

  <Button
    android:id="@+id/btNavigateIntentsActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Navigate Intents" />

  <Button
    android:id="@+id/btNavigateAsyncActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Navigate Async" />

  <Button
    android:id="@+id/btHandlerActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Navigate Handler activity" />


</LinearLayout>